        close1.Size = UDim2.fromOffset(16, 16)
        close1.Parent = frame3

        local frame4 = Instance.new("Frame")
        frame4.Name = "frame4"
        frame4.BackgroundColor3 = Color3.fromRGB(53, 53, 53)
